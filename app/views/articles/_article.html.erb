<div class="card">
    <div class="card-header"><%= article.title.capitalize %></div>
        <div class="card-body">
          <p class="card-text">Descripcion: <%= article.description.capitalize %></p>
          <div class="btn-toolbar">
            <div class="btn-group mr-2">
              <%= link_to 'Ver Articulo', article,class: "btn btn-info btn-sm" %>
            </div>
            <div class="btn-group mr-2">
              <%= link_to 'Editar Articulo', edit_article_path(article), class: "btn btn-primary btn-sm" %>
            </div>
            <div class="btn-group mr-2">
              <%= link_to 'Eliminar',article_path(article),class: "btn btn-danger btn-sm", method: :delete, data: { confirm: "Â¿Eliminar Articulo?"} %>
            </div>
          </div>
      </div>
    <div class="card-footer">
        <p><%= article.district.name %></p>
    </div>
</div>
